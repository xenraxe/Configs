# Default config for sway
#
# Copy this to ~/.config/sway/config and edit it to your liking.
#
# Read `man 5 sway` for a complete reference.

include ~/.config/sway/config.d/variables.conf
include ~/.config/sway/config.d/outputs.conf
include ~/.config/sway/config.d/keybinds.conf
include ~/.config/sway/config.d/layout.conf
include ~/.config/sway/config.d/scratchpad.conf
include ~/.config/sway/config.d/resize.conf
include ~/.config/sway/config.d/utilities.conf

# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while date +'%Y-%m-%d %X'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

include /etc/sway/config.d/*
